# Install everything with mamba
mamba install -c conda-forge python=3.7.6
mamba install -c conda-forge pyiron=0.2.17
mamba install -c conda-forge sphinxdft=2.6.1
mamba install -c conda-forge lammps=2020.03.03
mamba install -c conda-forge seaborn=0.10.1

# pyiron setup
printf "[DEFAULT]\nTOP_LEVEL_DIRS = ${HOME}\nRESOURCE_PATHS = /srv/conda/envs/notebook/share/pyiron" > ${HOME}/.pyiron
